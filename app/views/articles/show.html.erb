<p id="notice"><%= notice %></p>


<h1 class="article_title">  <%= @article.title %> </h1>

<% markdown = new_markdown %>
<div class="article-content">
  <%== markdown.render @article.content %>
</div>

<div class="comment-container">
  <h3>Komentarai</h3>

  <% @article.comments.where(visible: true).each do |comment| %>
      <b><p><%= comment.name %>:</p></b>
      <p><%= comment.content %></p>
      <hr>
  <% end %>



  <%= form_for [@article, Comment.new] do |f| %>

    <div class="field">
      <%= f.label 'Vardas:' %><br>
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label 'Tekstas:' %><br>
      <%= f.text_area :content %>
    </div>
    <div class="actions">
      <%= f.submit 'Komentuok!' %>
    </div>
  <% end %>
</div>